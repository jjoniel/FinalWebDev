<html>
    {{#if results.length}}
    <div style="padding: 0; font-size: 20px;">showing results {{start}} to  {{add start results.length}}</div>
    <div class="grid2">
        {{#each results}}
        <div class="left_align">
            <span style="font-weight: normal; font-size: 19px; letter-spacing: -3px;">{{this.t}}</span>
            <span class="{{this.house}}" style="font-size: 22px;">{{this.action}}</span>  
        </div>
        {{/each}}
    </div> 
    {{else}}
    <div style="padding: 0; font-size: 20px;">no results found</div>
    {{/if}}
    
</html>